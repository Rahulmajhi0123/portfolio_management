<%- include('partials/header') %>

<style>
  .navbar-brand {
    margin-right: 5px;
  }

  .navbar-toggler {
    margin-left: -5px;
    margin-right: 10px;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <i class="fa fa-bolt fa" aria-hidden="true"></i>
  <a class="navbar-brand" href="#">ShowCaseMe</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/profile">About us</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/posts">Post</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
    </ul>
    
  </div>
</nav>

<div class="container mt-5">
  <div class="jumbotron text-center">
    <i class="fa fa-bolt fa-6x" aria-hidden="true"></i>
    <h1 class="display-3">You've Discovered the world!</h1>
    <p class="secret-text">Manage your portfolio</p>
    <hr>

    <!-- Existing content -->

<% if (posts && posts.length > 0) { %>
  <h2 class="mt-5">Posts:</h2>
  <ul class="list-group mt-3">
    <% posts.forEach(function(post) { %>
      <li class="list-group-item">
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <a href="/posts/<%= post._id %>/edit" class="btn btn-primary mr-2">Edit</a>
        <form action="/posts/<%= post._id %>/delete" method="post" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <p class="mt-5">No posts yet.</p>
<% } %>
    <a class="btn btn-light btn-lg mt-4" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg mt-4" href="/posts" role="button">Post</a>
  </div>
</div>

<%- include('partials/footer') %>
